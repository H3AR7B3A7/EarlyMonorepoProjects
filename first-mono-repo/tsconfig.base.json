{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@first-mono-repo/backend-interface": [
        "libs/backend-interface/src/index.ts"
      ],
      "@first-mono-repo/ui-header": ["libs/ui-header/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
